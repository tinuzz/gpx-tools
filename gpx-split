import sys
import gpxtools
from datetime import timedelta



try:
    filename = sys.argv[1]
except Exception:
    print("Usage: gpx-split <filename> <timezone> <delta in hours>")
    print("Split tracks from <filename> to individual files")
    sys.exit(1)

try:
    tz = sys.argv[2]
    # if timezone is automatic we use the timezonefinder to find by coordinates
    if tz == "automatic":
        import timezonefinder
        tz = timezonefinder.TimezoneFinder()
except Exception:
    tz = None

try:
    td = timedelta(hours=sys.argv[3])
except Exception:
    td = timedelta()

gpxtools.split(filename, tz, split_time=td)

